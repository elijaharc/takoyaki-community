<%# <h1>Hello! View other seller pages here!</h1> %>
<div class="card bordered">
<div class="card-body">
<% if @seller_pages %>

<div class="flex justify-between items-center mt-4">
      <%= link_to root_path, class:"btn btn-primary-content" do %>
    <i class='bx bx-arrow-back text-lg' ></i>
    <% end %><%= paginate @seller_pages %>
      </div>

  <% @seller_pages.each do |seller| %>
  <div class="card lg:card-side shadow-lg bg-gray-50 mb-6 mt-6" data-theme="bumblebee">
  <div class="card-body">
    <h2 class="card-title items-center"><%= seller.business_name %>
    <div class="badge badge-primary mx-2"><%= seller.region %>, <%= seller.city%></div>
    <% if seller.verified? %>
      
    <div class="badge badge-success mx-2">Verified</div>
    <% end %>
    </h2> 
    <p><%= seller.business_info %></p> 
    <div class="justify-end card-actions">
    <%= link_to seller_page_path(seller.slug) do%>
      <button class="btn btn-primary">Show</button> 
      <% end %>
      
    </div>
  </div>
</div>

<% end %>



  <br>
<% end %>

    
</div>
</div>