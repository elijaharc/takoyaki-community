<%= form_for(current_user) do |f| %>
    

    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>

        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          Edit your account
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
          Or
          <%= link_to root_path, class:"font-medium text-indigo-600 hover:text-indigo-500" do%>
            Go back to home page.
          <% end %>
        </p>
      </div>
	  <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
      <form class="mt-8 space-y-6" action="#" method="POST">
        <input type="hidden" name="remember" value="true">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
		  	<%= f.label :first_name do %>
			  	<span class="block text-sm font-medium text-gray-600">First Name</span> 
			  <% end %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class:"w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"%>
          </div>
          <div>
		  <%= f.label :last_name do %>
			  	<span class="block text-sm mt-2 font-medium text-gray-600">Last Name</span> 
			  <% end %>
            <%= f.text_field :last_name, autocomplete: "last name", class:"w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"%>
          </div>
          <div>
          <%= f.label :location, class:"block text-sm mt-2 font-medium text-gray-600" %>
          <div class="flex flex-row justify-center gap-x-2.5">
          
            <% if current_user.region.nil? %>
                      <select id="states-of-country" value="" name="user[region]" class="w-6/12 border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500">
                      <option id="no-state" selected>Select Region</option>
                      /* For states within US */
                      <% CS.states(:ph).each do |key, value| %>
                        <option value="<%= value %>" id="<%= key %>"><%= value %></option>
                      <% end %>
                    </select>
                        <% else %>
                      <select id="states-of-country" value="<%= current_user.region %>" name="user[region]" class="w-6/12 border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500">
                      <option id="no-state" selected><%= current_user.region %></option>
                      /* For states within US */
                      <% CS.states(:ph).each do |key, value| %>
                        <option value="<%= value %>" id="<%= key %>"><%= value %></option>
                      <% end %>
                      </select>
                      <% end %>
                      <% if current_user.city.nil? %>
                      <select id="cities-of-state" name="user[city]" class="w-6/12 border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500" required>
                      <option value="">Select City</option>
                      </select>
                      <% else %>
                      <select id="cities-of-state" name="user[city]" class="w-6/12 border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500" required>
                      <option value="<%= current_user.city %>"><%= current_user.city %></option>
                      </select>
                      <% end %>
          </div>
          </div>
        </div>
        <div>
          <%= f.button :submit,class:"group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm mt-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", value: 'Sign Up' do%>
            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
              <!-- Heroicon name: solid/lock-closed -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-indigo-300 group-hover:text-indigo-400" fill="currentColor"viewBox="0 0 24 24"><path d="M8.707 19.707L18 10.414 13.586 6l-9.293 9.293c-.128.128-.219.289-.263.464L3 21l5.242-1.03C8.418 19.926 8.579 19.835 8.707 19.707zM21 7.414c.781-.781.781-2.047 0-2.828L19.414 3c-.781-.781-2.047-.781-2.828 0L15 4.586 19.414 9 21 7.414z"></path></svg>
            </span>
            Edit Profile 
          <% end %>
        </div>
      </form>
	  </div>
    </div>
  </div>
<% end %>   