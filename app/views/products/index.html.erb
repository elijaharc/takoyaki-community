    <div class="modal-action">
      <label for="my-modal-2" class="btn btn-primary">Accept</label> 
      <label for="my-modal-2" class="btn">Close</label>
    </div>
  </div>
</div>
    </div>
  </div>
</div> 

        <% end %>
      </tbody>
    </table>
    <br>
  <% else %>
  <br>
    <% if @seller_page.user_id == current_user.id %>
      <p>You do not have any products yet.</p>
    <% else %>
      <p>This seller does not have any products yet.</p>
    <% end %>
  <% end %>
<%= link_to "Back", seller_page_path(params[:seller_page_id]) %>

